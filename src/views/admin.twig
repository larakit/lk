{% extends 'lk-adminlte::!.layouts.default' %}

{% block content %}
    <div class="row">
        <div class="col-md-9">
            <a href="/dialog" class="js-bootstrap-dialog">DIALOG</a>
            {% for i in range(1, 5) %}
                <div class="box box-default" {{ adminlte__box_wrapper_class(i)|raw }}>
                    <div class="box-header with-border">
                        <h3 class="box-title">{{ adminlte__box_toggler(i, '#Item '~i)|raw }}</h3>
                        <div class="box-tools pull-right">
                            {{ adminlte__box_toggler(i)|raw }}
                            <span class="label label-danger ng-binding">{{ (100-i*15) }}</span>
                            <a href="/admincp/items/{{ i }}/edit"
                               title="Редактировать"
                               class="btn btn-box-tool"><i class="fa fa-pencil"></i></a>
                            <a ng-click="loaded_pennis{{ i }}=!loaded_pennis{{ i }}"
                               title="Обновить"
                               class="btn btn-box-tool"><i class="fa fa-spinner fa-spin"></i></a>
                            <a href="/admincp/items/{{ i }}/delete"
                               title="Удалить"
                               class="btn btn-box-tool"><i class="fa fa-times"></i></a>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <a class="btn btn-app">
                                    <span class="badge bg-red">531</span>
                                    <i class="fa fa-heart-o"></i> Likes
                                </a>
                            </div>
                            <div class="col-lg-6">
                                <div class="box box-widget widget-user-2">
                                    <!-- Add the bg color to the header using any of the bg-* classes -->
                                    <div class="widget-user-header bg-yellow">
                                        <div class="widget-user-image">
                                            <img alt="User Avatar" src="http://beerhold.it/128/128/people/{{ i }}" class="img-circle">
                                        </div>
                                        <!-- /.widget-user-image -->
                                        <h3 class="widget-user-username">Nadia Carmichael</h3>
                                        <h5 class="widget-user-desc">Lead Developer</h5>
                                    </div>
                                    <div class="box-footer no-padding">
                                        <ul class="nav nav-stacked">
                                            <li><a href="#">Projects <span class="pull-right badge bg-blue">31</span></a></li>
                                            <li><a href="#">Tasks <span class="pull-right badge bg-aqua">5</span></a></li>
                                            <li><a href="#">Completed Projects <span class="pull-right badge bg-green">12</span></a></li>
                                            <li><a href="#">Followers <span class="pull-right badge bg-red">842</span></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ adminlte__box_overlay('pennis'~i)|raw }}
                </div>
            {% endfor %}
        </div>
        <div class="col-md-3">
            <div class="box box-success box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">Фильтры списка</h3>
                </div>
                <div class="box-body">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Название</label>
                            <input type="text" class="form-control" placeholder="Подстрока входящая в название">
                        </div>
                        <button type="submit" class="btn btn-default">Найти</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
